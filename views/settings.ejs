    <!--UPDATE PASSWORD-->
    <div id="update_password_wrapper">

        <div id="update_password_title"><strong>Update Password</strong></div>
        <div id="update_password_panel"><br />
            <form id="" action="#" method="post">
                <div class="py-5" >
                        <div class="row">

                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <p id="error_password_handler" class="alert-danger"></p><!--jQuery error handler-->
                                <p id="success_password_handler" style="background-color: #00AA88; color: white;"></p><!--jQuery success handler-->
